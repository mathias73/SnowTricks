{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}
    <div class="hidden" id="hidden-modal">
        {% include 'component/modal.html.twig' %}
    </div>
    <div class="w-full bg-cover bg-center h-screen"
         style="background-image: url('{{ asset('/image/img-header.jpg') }}');">
        {% for message in app.flashes('success') %}
            {% include 'component/flashSuccess.html.twig' with {message} %}
        {% endfor %}
        <div class="flex items-center justify-center h-full w-full bg-gray-900 bg-opacity-30">
            <div class="text-center">
                <h1 class="text-white lg:text-7xl text-5xl uppercase font-bold">SnowTricks</h1>
                <p class="text-white text-2xl">Le site du snowboard</p>
                <div class="pt-44">
                    <a href="#tricks">
                        <i class="fa fa-arrow-down fa-3x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container my-12 mx-auto px-4 md:px-12" id="tricks">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">
            {% for figure in figures %}
                <div class="max-w-sm rounded overflow-hidden shadow-lg mx-auto my-8 {% if loop.index >= 7 %} hidden {% endif %}"
                     {% if loop.index >= 7 %}id="hidden-cards"{% endif %}>
                    <a href="{{ path('snowtricks_figure', {'id': figure.id}) }}">
                        <img class="w-full" src="{{ figure.picture }}" alt="{{ figure.name }}">
                    </a>
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2">
                            <a href="{{ path('snowtricks_figure', {'id': figure.id}) }}">
                                {{ figure.name }}
                            </a>
                            <span class="float-right space-x-3">
                                <a href="{{ path('snowtricks_editfigure', {'id': figure.id}) }}">
                                    <span class="hidden">Modifier</span>
                                    <i class="fa fa-pen"></i>
                                </a>
                                <button id="delete-figure" data-id="{{ figure.id }}" data-name="{{ figure.name }}">
                                    <span class="hidden">Supprimer</span>
                                    <i class="fa fa-trash"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center">
            <button class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" id="show-more">
                Voir plus <i class="fas fa-plus"></i>
            </button>
            <button class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded hidden" id="show-less">
                Voir moins <i class="fas fa-minus"></i>
            </button>
        </div>
        <div class="float-right">
            <a href="#top">
                <i class="fa fa-arrow-up fa-3x"></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
    {{ encore_entry_script_tags('figure') }}
{% endblock %}
