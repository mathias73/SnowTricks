{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="h-screen pt-6 bg-gray-100">
    <div class="container mx-auto my-16">
    <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                {% if report %}
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Nom
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Report
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Message
                            </th>
                            <th scope="col" class="relative px-6 py-3">
                                <span class="sr-only">Edit</span>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for message in report %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <img class="h-10 w-10 rounded-full" src="{{ asset('uploads/profilePicture/' ~ message.user.profilePictureName) }}" alt="">
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ message.user.username }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ message.user.email }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">{{ message.message }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold">
                                  {{ message.discussion.message }}
                                </span>
                            </td>
                            <td class="p-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('snowtricks_administration_validate_message', {'discussion': message.discussion.id}) }}" class="hover:text-green-900 rounded-full bg-green-100 text-green-800 px-4 py-2">Valider</a>
                            </td>
                            <td class="p-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('snowtricks_administration_delete_message', {'discussion': message.discussion.id}) }}" class="hover:text-red-900 rounded-full bg-red-100 text-red-800 px-4 py-2">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                </div>
                <div class="text-center bg-white rounded md:mx-64 shadow-xl">
                    <p class="pt-6">Aucun messages n'a été signalé <br> Revenez plus tard</p>
                    <button class="bg-blue-500 p-2 text-white rounded my-12">Retour à l'accueil</button>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
